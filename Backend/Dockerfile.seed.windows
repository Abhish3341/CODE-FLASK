FROM node:16-alpine

# Install bash and netcat for wait script (keeping original for compatibility)
RUN apk add --no-cache bash netcat-openbsd

# Create app directory
WORKDIR /usr/src/app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy app source
COPY . .

# Make wait script executable (bash version)
RUN chmod +x wait-for-mongo.sh

# Default command
CMD ["node", "scripts/seedProblems.js"]